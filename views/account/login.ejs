<div class="login-wrapper">
    
 <% if (title) { %>
        <h1 class="form-title">
            <%= title %>
        </h1>
        <% } else { %>
            <% res.redirect('/') %>
                <% } %>
                    <%- messages() %>
                        <% let errors = locals.errors %>
                        <% if (errors) { %>
                            <ul class="notice">
                                <% errors.array().forEach(error=> { %>
                                    <li>
                                        <%= error.msg %>
                                    </li>
                                    <% }) %>
                            </ul>
                            <% } %>

    <!-- The Login Form Content -->
    <form method="post" class="sign-in">
        <div class="email-wrapper">
            <label for="account_email">Email:</label>
            <input type="email" id="account_email" name="account_email" required >
        </div>
        <div class="password-wrapper">
            <label for="account_password">Password:</label>
            <input type="password" id="account_password" name="account_password" required >
        </div>
    </form>
    <span class="noAccount">No account? <a class="sign-up" href="/account/register">Sign-up</a></span>
    <button type="submit" class="submit">Login</button>
</div>