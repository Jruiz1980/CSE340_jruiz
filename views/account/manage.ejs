<div class="manage-wrapper">
  <%- messages(); %>
  <h1>Welcome, 
    <%= locals.accountData.account_firstname; %>
  </h1>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg ;%></li>
        <% }); %>
    </ul>
<% } %>

<h2>You're logged in.</h2>

<h3>Update Information</h3>
<a href="/account/update/<%= locals.accountData.account_id ;%>">Update Account Information</a>

<% if (locals.accountData.account_type === "Admin" || locals.accountData.account_type === "Employee") { %>
    <h3>Inventory Management</h3>
    <p>
        <a href="/inv">Inventory Management</a>
    </p>
<% } %>
</div>