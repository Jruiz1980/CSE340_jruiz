<header id="top-header">
    <span class="siteName">
      <img src="/images/site/icon.png" alt="CSE Motors Icon" class="icon">
      <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
      <% if (locals.loggedin) { %>
        <a href="/account">Welcome,
          <%= locals.accountData.account_firstname; %>
        </a>
        <a href="/account/logout">Logout</a>
        <% } else { %>
          <div>
            <a title="Click to log in" href="/account/login">MY ACCOUNT</a>
          </div>
          <% } %>
    </div>
</header>